:root {
	font-family:sans-serif;
	line-height:1.15;
}

.sidebar-li-title-name::before {
	display: block;
	padding: .25rem .5rem;
	text-align: center;
	content: "the-demon-next-door";
	font-size: 1.15rem;
	letter-spacing: .03rem;
	color: #53698B;
}

.sidebar-li-title-stories::before {
	display: block;
	padding: .35rem .5rem;
	text-align: center;
	content: "─── Stories ───";
	font-size: 1rem;
	letter-spacing: .03rem;
	color: #53698B;
}

.sidebar-li-title-links::before {
	display: block;
	padding: .35rem .5rem;
	text-align: center;
	content: "─── Links ───";
	font-size: 1rem;
	letter-spacing: .03rem;
	color: #53698B;
}

.sidebar-li {
	display: block;
	padding: .35rem .5rem;
	text-align: center;
	font-size: .9rem;
	letter-spacing: .03rem;
	color: #53698B;
}

.sidebar {
	background: rgba(0,0,0,0.85);
	height:100%;
	width: 250px;
	position: fixed;
	z-index: 1;
	top: 0;
	overflow-x: hidden;
	padding-top: 20px;
}

.list-unstyled {
	list-style:none;
	padding-left:0;
}

.sidebar-nav {
	display:flex;
	flex-direction:column;
}

.body, body {
	font-family: Roboto, arial, sans-serif;
	line-height: 1.5;
	font-size: 10pt;
	background-color:#53698B;
	background-image: url("https://i.ibb.co/5BBWmvq/galaxy.png");
	background-repeat: repeat;
	background-size: cover;
	background-attachment: fixed;
	min-height:100%;
	font-weight: 400;
	color:#4646db;
}	

.main {
	height:100%;
	max-width:85%;
	margin-left:270px;
	padding-top: 20px;
}

@media screen and (max-height: 768px) {
  .sidebar {padding-top: 15px;}
  .sidebar a {font-size: 18px;}
}

.sidebar-nav li {
	margin:0;
	padding:0;
}

.sidebar-nav li a {
	color:#4646db;
	font-size:.9rem;
	padding: .2em .5em;
	letter-spacing:1px;
	display:inline-block;
	border-radius:.5em;
	text-decoration: none;
	transition-duration:0.5s;
}

.sidebar-nav li a:hover {
	filter:brightness(0.8);
	transition-duration:0.5s;
	transition-property:filter;
}

.sidebar-nav li a:focus {
	filter:brightness(0.8);
	transition-duration:0.5s;
	transition-property:filter;
}

.a {
	text-decoration:none;
}

.sidebar .sidebar-li img {
	display:block;
	max-height:150px;
	max-width:150px;
	margin:10px auto !important;
	background-color:#4646db;
	padding:2px;
	border-radius:50%;
}

html,body {
    padding:0px 10px;
    margin:0px;
}

.page-section {
	background: rgba(0,0,0,0.85);
	border-radius: .25em;
	display: flex;
	flex-direction:column;
	position:relative;
}

.section-title {
	padding: 20px 20px 0;
	line-height: 1;
}

.section-title h1 {
	margin-bottom:0;
}

h1, h2, h3, h4 {
	text-transform: uppercase;
}

h1 {
	font-size:2em;
	font-weight:400;
	letter-spacing:1.5px;
}

.h1, .h2, .h3, .h4, .h5, .h6, h1, h2, h3, h4, h5, h6 {
	color:inherit;
	font-family:inherit;
	line-height:1.1;
}

h1, h2, h3, h4, h5, h6 {
	margin-top:0;
}

h1 {
	margin :.67em 0;
}	

body, p, a {
	font-family: Roboto, arial, sans-serif;
}

hr {
	border:0;
	border-top:1px solid hsla(0,0%,100%,.1);
	margin-top:1rem;
	box-sizing:content-box;
	height:0;
	overflow:visible;
	border-color:rgba(70,70,219,0.25);
}

.no-gutters {
	margin-left:0;
	margin-right:0;
}

.row {
	display:flex;
	flex-wrap:wrap;
	margin-left:15px;
	margin-right:15px;
}

@media (min-width:768px) {
	.order-md-2{
		order:2;
	}
}

@media (min-width:768px) {
	.col-md-6 {
		flex:0 0 50%;
		max-width:50%;
	}
}

.col, .col-1, .col-10, .col-11, .col-12, .col-2, .col-3, .col-4, .col-5, .col-6, .col-7, .col-8, .col-9, .col-auto, .col-lg, .col-lg-1, .col-lg-10, .col-lg-11, .col-lg-12, .col-lg-2, .col-lg-3, .col-lg-4, .col-lg-5, .col-lg-6, .col-lg-7, .col-lg-8, .col-lg-9, .col-lg-auto, .col-md, .col-md-1, .col-md-10, .col-md-11, .col-md-12, .col-md-2, .col-md-3, .col-md-4, .col-md-5, .col-md-6, .col-md-7, .col-md-8, .col-md-9, .col-md-auto, .col-sm, .col-sm-1, .col-sm-10, .col-sm-11, .col-sm-12, .col-sm-2, .col-sm-3, .col-sm-4, .col-sm-5, .col-sm-6, .col-sm-7, .col-sm-8, .col-sm-9, .col-sm-auto, .col-xl, .col-xl-1, .col-xl-10, .col-xl-11, .col-xl-12, .col-xl-2, .col-xl-3, .col-xl-4, .col-xl-5, .col-xl-6, .col-xl-7, .col-xl-8, .col-xl-9, .col-xl-auto {
	padding-left: 15px;
	padding-right: 15px;
	position: relative;
	width: 100%;
}

@media (min-width:768px) {
	.pl-md-2, .px-md-2 {
		padding-left:.5rem !important;
	}
}

.mb-3, .my-3 {
	margin-bottom:1rem !important;
}

.w-100 {
	width:100%!important;
}

.h-100 {
	height:100% !important;
}

.d-flex {
	display:flex !important
}

.mb-auto, .my-auto {
	margin-bottom:auto !important;
}

.focal-image {
	display:block;
	margin: 0 auto;
	max-height:550px;
	border-radius:.25em;
}

.focal-image, .f-350, .f-400 {
	background-size:cover;
	background-position:center 0;
	background-repeat: no-repeat;
	border-radius:.25em;
}

@media (min-width:768px) {
	.mt-md-n3, .my-md-n3 {
		margin-top:-1rem !important;
	}
}

.mb-2, .my-2 {
	margin-bottom: .5rem !important;
}

body, p {
	color:#4646db;
}

body, p, td {
	letter-spacing:.45px;
	font-size:10.5pt;
}

p {
	margin-bottom:1rem;
	margin-top:0;
}

.col-12 {
	flex:0 0 100%;
	max-width:100%;
}

.section-block {
	border-radius:.25em;
	display:block;
	flex:1 1 auto;
	padding:1.25rem;
}

.pt-3, py-3 {
	padding-top:1rem !important;
}